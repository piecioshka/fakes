{
  "$schema": "http://json-schema.org/draft-07/schema",
  "id": "tweets",
  "type": "array",
  "minItems": 5,
  "maxItems": 5,
  "items": {
    "type": "object",
    "required": ["id", "createdTime", "author", "body", "likes"],
    "properties": {
      "id": {
        "type": "string",
        "chance": {
          "guid": {}
        }
      },
      "createdTime": {
        "type": "string",
        "faker": {
          "fake": "{{date.past}}"
        }
      },
      "author": {
        "type": "object",
        "required": ["id", "name", "avatarUrl"],
        "properties": {
          "id": {
            "type": "string",
            "chance": {
              "guid": {}
            }
          },
          "name": {
            "type": "string",
            "faker": {
              "fake": "{{name.firstName}} {{name.lastName}}"
            }
          },
          "avatarUrl": {
            "type": "string",
            "chance": {
              "avatar": {}
            }
          }
        }
      },
      "body": {
        "type": "string",
        "chance": {
          "paragraph": {
            "sentences": 1
          }
        }
      },
      "likes": {
        "type": "number",
        "faker": {
          "fake": "{{random.number(20)}}"
        }
      }
    }
  }
}
