{
  "$schema": "http://json-schema.org/draft-07/schema",
  "id": "events",
  "type": "array",
  "minItems": 5,
  "maxItems": 5,
  "items": {
    "type": "object",
    "required": [
      "id",
      "createdTime",
      "eventTime",
      "venue",
      "bannerUrl",
      "author",
      "title",
      "body"
    ],
    "properties": {
      "id": {
        "type": "string",
        "chance": {
          "guid": {}
        }
      },
      "createdTime": {
        "type": "string",
        "faker": {
          "fake": "{{date.past}}"
        }
      },
      "eventTime": {
        "type": "string",
        "faker": {
          "fake": "{{date.past}}"
        }
      },
      "venue": {
        "type": "string",
        "faker": {
          "fake": "{{address.streetAddress}}, {{address.city}}, {{address.country}}"
        }
      },
      "bannerUrl": {
        "type": "string",
        "faker": {
          "fake": "https://picsum.photos/id/{{random.number(1084)}}/300/150/"
        }
      },
      "author": {
        "type": "object",
        "required": ["id", "name", "avatarUrl"],
        "properties": {
          "id": {
            "type": "string",
            "chance": {
              "guid": {}
            }
          },
          "name": {
            "type": "string",
            "faker": {
              "fake": "{{name.firstName}} {{name.lastName}}"
            }
          },
          "avatarUrl": {
            "type": "string",
            "chance": {
              "avatar": {}
            }
          }
        }
      },
      "title": {
        "type": "string",
        "chance": {
          "paragraph": {
            "sentences": 1
          }
        }
      },
      "body": {
        "type": "string",
        "chance": {
          "paragraph": {
            "sentences": 3
          }
        }
      }
    }
  }
}
