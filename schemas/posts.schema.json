{
    "id": "posts",
    "type": "array",
    "minItems": 5,
    "maxItems": 5,
    "items": {
        "type": "object",
        "required": [
            "id",
            "createdTime",
            "author",
            "body",
            "images"
        ],
        "properties": {
            "id": {
                "chance": {
                    "guid": {}
                }
            },
            "createdTime": {
                "type": "string",
                "faker": {
                    "fake": "{{date.past}}"
                }
            },
            "author": {
                "type": "object",
                "required": [
                    "id",
                    "name",
                    "avatarUrl"
                ],
                "properties": {
                    "id": {
                        "chance": {
                            "guid": {}
                        }
                    },
                    "name": {
                        "type": "string",
                        "faker": {
                            "fake": "{{name.firstName}} {{name.lastName}}"
                        }
                    },
                    "avatarUrl": {
                        "type": "string",
                        "faker": {
                            "fake": "{{image.avatar}}"
                        }
                    }
                }
            },
            "body": {
                "chance": {
                    "paragraph": {
                        "sentences": 1
                    }
                }
            },
            "images": {
                "type": "array",
                "items": {
                    "type": "string",
                    "faker": {
                        "fake": "https://picsum.photos/id/{{random.number(1084)}}/300/150/"
                    }
                }
            }
        }
    }
}